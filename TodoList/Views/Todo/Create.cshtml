@model TodoItem

<h2>Create Todo Item</h2>

<form asp-action="Create" method="post" onsubmit="return validateForm()">
    <div class="form-group">
        <label asp-for="TaskDescription">Task Description:</label>
        <input asp-for="TaskDescription" class="form-control" oninput="clearError()" />
        <span id="error-message" style="color: red;"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Todo Item
        </button>
    </div>
</form>

<script>
    function validateForm() {
        var taskDescription = document.getElementById("TaskDescription");
        var errorMessage = document.getElementById("error-message");

        if (taskDescription.value.trim() === "") {
            errorMessage.innerText = "Task Description cannot be empty.";
            taskDescription.classList.add("is-invalid");
            return false;
        } else {
            errorMessage.innerText = "";
            taskDescription.classList.remove("is-invalid");
            return true;
        }
    }

    function clearError() {
        var taskDescription = document.getElementById("TaskDescription");
        var errorMessage = document.getElementById("error-message");

        if (taskDescription.value.trim() !== "") {
            errorMessage.innerText = "";
            taskDescription.classList.remove("is-invalid");
        }
    }
</script>
